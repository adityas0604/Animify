generator client {
  provider = "prisma-client-js"
   output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  videos    Video[]
}

model Video {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  prompt    String
  filename  String
  script    String   // ‚Üê Store the generated Manim code here
  createdAt DateTime @default(now())
}

